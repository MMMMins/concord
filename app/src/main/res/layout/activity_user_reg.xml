<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.UserRegActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/login_signup" />

    <Button
        android:id="@+id/btnLoginPage"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="141dp"
        android:background="@drawable/btn_background"
        android:layout_marginTop="488dp"
        android:layout_marginEnd="140dp"
        android:text="Login"

        app:layout_constraintBottom_toTopOf="@+id/btnSignUpPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSignUpPage"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:layout_marginStart="141dp"
        android:layout_marginEnd="140dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/btn_background"

        android:text="SignUp"
        app:layout_constraintBottom_toTopOf="@+id/txtFindID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginPage" />

    <TextView
        android:id="@+id/txtFindPwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="142dp"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="103dp"
        android:text="비밀번호를 잊으셨나요?"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtFindID" />

    <TextView
        android:id="@+id/txtFindID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="148dp"
        android:text="아이디를 잊으셨나요?"
        android:textSize="13dp"
        app:layout_constraintBottom_toTopOf="@+id/txtFindPwd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSignUpPage" />

</androidx.constraintlayout.widget.ConstraintLayout>