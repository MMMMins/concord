<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewModel"
            type="com.hackathon.concord.viewModel.LoginService" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 나머지 뷰 요소들은 이곳에 포함 -->

        <EditText
            android:id="@+id/edtID"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_marginTop="296dp"
            android:ems="10"
            android:hint="ID"
            android:inputType="textPersonName"
            android:text="@={viewModel.getUserId()}"
            app:layout_constraintBottom_toTopOf="@+id/edtPwd"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/edtPwd"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:text="@={viewModel.getPassword()}"
            app:layout_constraintBottom_toTopOf="@+id/btnLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtID" />

        <Button
            android:id="@+id/btnLogin"
            android:layout_width="220dp"
            android:layout_height="0dp"
            android:layout_marginBottom="300dp"
            android:onClick="@{() -> viewModel.onLoginClick()}"
            android:text="Login"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edtPwd" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
